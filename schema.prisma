datasource db {
  url      = env("DB_URL")
  provider = "mysql"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["createMany"]
}

model SkillType {
  id    Int     @id @default(autoincrement())
  name  String
  Skill Skill[]
}

model Skill {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  desc        String    @db.LongText
  picture     String?
  rank        String
  target      String
  percentage  Int
  skillTypeId Int
  Type        SkillType @relation(fields: [skillTypeId], references: [id])
  createdAt   DateTime  @default(now())
}
